<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="rvm"
        type="com.latentdev.d_check.RideViewModel" />
</data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <RelativeLayout
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@android:color/background_light"
            android:fadingEdge="horizontal"
            android:orientation="vertical"
            android:padding="10dp">
            <!--android:background="@drawable/list_item_background_24dp">-->


            <TextView
                android:id="@+id/title"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingBottom="5dp"
                android:text="@{rvm.title}"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waittime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:paddingBottom="5dp"
                android:text="@{rvm.waitTime}" />

            <TextView
                android:id="@+id/status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:text="@{rvm.status}" />

            <TextView
                android:id="@+id/waitmessage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/status"
                android:layout_alignBottom="@+id/status"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:text="@{rvm.message}" />
            <!--<View style="@style/Divider"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status"/>-->
        </RelativeLayout>
    </FrameLayout>
</layout>